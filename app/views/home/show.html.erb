
<div class="span-22 last" style="margin-bottom: 50px;">
    
    <div class="span-7">
        <h3> <span class="highlight"> Top Games </span></h3>

        <ol>
        <% @top_games.each do |game| %><li>
            <% unless game.title.blank? %>
                <%= link_to game.title, game %>
            <% else %>
                <%= link_to game.original_filename, game %>
            <% end %></li><br/>
        <% end %>
        </ol>
        
        <%= link_to (image_tag "buttons/see_all.png"), list_path %>
    </div>

    <div class="span-15 last">
        <% @top_games.each_with_index do | game, index |  %>
            <%= render :partial => 'games/five_column_tile', :locals => { :game => game, :last => ((index + 1) % 3 == 0) } %>
        <% end %>
    </div>
</div>

<hr />

<div class="span-22 last">
    
    <div class="span-15">
        <h3> <span class="highlight"> New Users </span> </h3>
        <% @new_users.each do |user| %>
            <%= link_to user.display_name || "User #{user.id}", user %>, Created <%= time_ago_in_words user.created_at %> ago <br/>
        <% end %>
    </div>

    <div class="span-6 prepend-1 last">
        <h3> <span class="highlight"> Recent Activity </span></h3>

        <% @new_ratings.each do |rating| %>
            <%= rating.rating %><br/>
        <% end %>
    </div>
    
</div>


