<h2> List All </h2>


<div class="span-18">    
    <h3> <span class="highlight"> Games </span></h3>
    
    <% @games.each_with_index do | @game, @index| %>
        <div class="span-6 <%= "last" if (@index + 1) % 3 == 0 %>" style="height: 250px;">
            <%= render :partial => 'layouts/gameTile' %>
        </div>
    <% end %>
</div>



<div class="span-6 last">
    <h3> <span class="highlight"> Users </span></h3>
    
    <ul>
        <% @users.each do |user| %>
            <li><h5 style="margin-bottom: 3px;">
                <% if not user.name.nil? and not user.name.empty? %>
                    <b><%= user.name %></b> (<%= link_to user.login, user %>)
                <% else %>
                    <b><%= user.login %></b> (<%= link_to "view profile", user %>)
                <% end %>
            </h5>
        
            Created <%= time_ago_in_words user.created_at %> ago<br />
            <%= user.games.count %> Games<br/>
        
            <hr style="margin-top: 3px;"/></li>
        <% end %>
    </ul>
</div>